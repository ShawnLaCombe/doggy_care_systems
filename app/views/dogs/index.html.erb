<h1>Doggy Care Systems</h1>

<table id ="space" style= "border: solid black">
  <thead>
    <tr>
      <th> Owner </th>
      <th> ID </th>
      <th> Name </th>
      <th> Breed </th>
      <th> Age </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
    <tr>
      <td><%= dog.owner %></td>
      <td><%= dog.id %></td>
      <td><%= dog.name %></td>
      <td><%= dog.breed %></td>
      <td><%= dog.age %></td>
      <td><%= link_to "show", dog_path(dog), class: "btn btn-sm btn-info" %></td>
      <td><%= link_to "edit", edit_dog_path(dog), class: "btn btn-sm btn-default" %></td>
      <td><%= link_to "delete", dog_path(dog), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table><br>

<hr> <%= link_to 'Add a new dog', new_dog_path, class: "btn btn-sm btn-success" %> <hr>


