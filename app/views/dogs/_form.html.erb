
<%= form_for @dog do |dog_fields| %>

<div class="form-group">
  <%= dog_fields.label :owner %>
  <%= dog_fields.text_field :owner, class: "form-control" %><br>
</div>

<div class="form-group">
  <%= dog_fields.label :name %>
  <%= dog_fields.text_field :name, class: "form-control" %><br>
</div>

<div class="form-group">
  <%= dog_fields.label :breed  %>
  <%= dog_fields.text_field :breed, class: "form-control" %><br>
</div>

<div class="form-group">
  <%= dog_fields.label :age %>
  <%= dog_fields.text_field :age, class: "form-control" %><br>
</div>

<div class="form-group">
  <%= dog_fields.submit class: "btn btn-sm btn-success" %>
</div>

<% end %>
<br>

<%= link_to "Home Page", dogs_index_path, class: "btn btn-sm btn-default" %>